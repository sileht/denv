denv () {
    case "$1" in
        enter)
            denv_enter $2
        ;;
        exit)
            denv_exit
        ;;
        *)
            echo "Usage: denv {enter|exit} [args...]"
            return 1
        ;;
    esac
}

denv_enter() {
    asset="$1"
    if [ -z "$asset" ]; then
        echo "Usage: denv enter <asset>"
        return 1
    fi

    export DENV_CURRENT=$1
    export TEST_DOCKER=ignore
}

denv_exit() {
    unset DENV_CURRENT
    unset TEST_DOCKER
}
